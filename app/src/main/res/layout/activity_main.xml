<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.driverdelight.MainActivity"
    android:background="@color/colorBackground">


    <ImageButton
        android:id="@+id/phoneButton"

        android:elevation="5dp"
        android:src="@drawable/phone3"
        android:scaleType="fitCenter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spotifyButton" />

    <ImageButton
        android:id="@+id/spotifyButton"

        android:elevation="5dp"
        android:src="@drawable/spotify"
        android:scaleType="fitCenter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/phoneButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
